#СравниваемаяСтрока считается путем, проверяется существование этого пути и то что этот путь является обычным файлом.
RewriteCond %{REQUEST_FILENAME} !-f 
#Сравниваемая Строка считается путем, проверяется существование этого пути и то что этот путь является каталогом.
RewriteCond %{REQUEST_FILENAME} !-d 
RewriteRule (.*)_p([0-9]+).html $1.html?_pn=$2&%{QUERY_STRING} [L]

RewriteCond %{REQUEST_FILENAME} !-f 
RewriteCond %{REQUEST_FILENAME} !-d 
RewriteRule ^(([0-9A-z\_\-\.]+)\/)?(add|list)(_([0-9]+))?\.html(.*) index.php?pageParam=$1$3&rubric=$5&%{QUERY_STRING} [L]

